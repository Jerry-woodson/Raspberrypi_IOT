/* pages/adHumidity/adHumidity.wxss */
.button-container {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  height: 50vh; /* 设置高度占满屏幕 */
}

.back-button {
  background-color: #007ACC; /* 设置背景颜色 */
  color: white; /* 设置文字颜色 */
  font-size: 20px; /* 设置文字大小 */
  padding: 10px 20px; /* 设置内边距 */
  border-radius: 20px; /* 设置圆角 */
  cursor: pointer; /* 鼠标悬停时显示手型光标 */
}

/* adjustHumidity.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.title {
  font-size: 24px;
  margin-bottom: 20px;
}

humidity-control {
  display: flex;
  align-items: center;
}

.label {
  font-size: 18px;
  margin-right: 10px;
}

input {
  width: 100px;
  font-size: 18px;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 5px;
  margin-right: 10px;
}

unit {
  font-size: 18px;
}

.adjust-button {
  background-color: #007ACC;
  color: white;
  font-size: 20px;
  padding: 10px 20px;
  border-radius: 20px;
  cursor: pointer;
  margin-top: 20px;
}
